        <property name="connection.username">jcjuthwxzd0tff3l</property>
        <property name="connection.password">o64djcmdwhdvkxgd</property>-->

        <!-- JDBC connection pool settings ... using built-in test pool -->
        <!--        <property name="connection.pool_size">1</property>-->
        <!-- Select our SQL dialect -->
        <property name="dialect">org.hibernate.dialect.MySQL8Dialect</property>
        <!-- Echo the SQL to stdout -->
        <property name="show_sql">true</property>
        <property name="format_sql">true</property>

        <!-- Set the current session context -->
        <property name="current_session_context_class">thread</property>
        <!-- Drop and re-create the database schema on startup -->
        <property name="hbm2ddl.auto">create</property>
        <property name="hibernate.hbm2ddl.import_files">data.sql</property>


<!--        Entidades-->
        <mapping class="com.example.proyectoFinalExpertos.model.Expert" />
        <mapping class="com.example.proyectoFinalExpertos.model.Tag" />
        <mapping class="com.example.proyectoFinalExpertos.model.User" />

    </session-factory>
</hibernate-configuration>